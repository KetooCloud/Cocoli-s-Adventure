<body>
  <h2>ğŸŒŸ Â¡Bienvenida a Cocoli Adventure! ğŸŒŸ</h2>
  <canvas id="gameCanvas" width="400" height="500"></canvas>
  <div class="controls">
    <button id="leftBtn">â¬…ï¸</button>
    <button id="jumpBtn">ğŸ¦˜ Saltar</button>
    <button id="rightBtn">â¡ï¸</button>
  </div>
  <p id="mensaje">ğŸ‰ Â¡Feliz CumpleaÃ±os, Vale! ğŸ‰<br>Tu cÃ³digo de Robux: <strong>ABCD-1234-EFGH</strong></p>

  <script>
    const canvas = document.getElementById("gameCanvas");
    const ctx = canvas.getContext("2d");

    let player = { x: 50, y: 400, width: 30, height: 30, dy: 0, dx: 0, speed: 3, gravity: 0.5, jumping: false };
    let keys = { left: false, right: false };

    let platforms = [
      { x: 50, y: 450, width: 100, height: 10 },
      { x: 200, y: 400, width: 100, height: 10 },
      { x: 100, y: 350, width: 100, height: 10 },
      { x: 250, y: 300, width: 100, height: 10 },
      { x: 50, y: 250, width: 100, height: 10 },
      { x: 200, y: 200, width: 100, height: 10 },
      { x: 150, y: 150, width: 100, height: 10 },
      { x: 250, y: 100, width: 100, height: 10 },
      { x: 170, y: 50, width: 60, height: 60, goal: true }
    ];

    function drawPlayer() {
      ctx.fillStyle = "red";
      ctx.fillRect(player.x, player.y, player.width, player.height);
    }

    function drawPlatforms() {
      ctx.fillStyle = "brown";
      for (let p of platforms) {
        ctx.fillRect(p.x, p.y, p.width, p.height);
      }
    }

    function drawGoal() {
      ctx.fillStyle = "yellow";
      ctx.font = "40px Arial";
      ctx.fillText("12", 180, 90);
    }

    function update() {
      player.dy += player.gravity;
      player.y += player.dy;

      if (keys.left) player.x -= player.speed;
      if (keys.right) player.x += player.speed;

      // LÃ­mite de pantalla
      player.x = Math.max(0, Math.min(canvas.width - player.width, player.x));

      if (player.y > canvas.height - player.height) {
        player.y = canvas.height - player.height;
        player.dy = 0;
        player.jumping = false;
      }

      for (let p of platforms) {
        if (
          player.x < p.x + p.width &&
          player.x + player.width > p.x &&
          player.y + player.height > p.y &&
          player.y + player.height < p.y + 10
        ) {
          player.y = p.y - player.height;
          player.dy = 0;
          player.jumping = false;
        }
      }

      let goal = platforms.find(p => p.goal);
      if (
        player.x < goal.x + goal.width &&
        player.x + player.width > goal.x &&
        player.y < goal.y + goal.height &&
        player.y + player.height > goal.y
      ) {
        document.getElementById("mensaje").style.display = "block";
        return;
      }

      draw();
      requestAnimationFrame(update);
    }

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      drawPlayer();
      drawPlatforms();
      drawGoal();
    }

    // Controles tÃ¡ctiles
    document.getElementById("leftBtn").addEventListener("touchstart", () => keys.left = true);
    document.getElementById("leftBtn").addEventListener("touchend", () => keys.left = false);

    document.getElementById("rightBtn").addEventListener("touchstart", () => keys.right = true);
    document.getElementById("rightBtn").addEventListener("touchend", () => keys.right = false);

    document.getElementById("jumpBtn").addEventListener("touchstart", () => {
      if (!player.jumping) {
        player.dy = -10;
        player.jumping = true;
      }
    });

    update();
  </script>
</body>
